<!DOCTYPE idea-plugin PUBLIC "Plugin/DTD" "http://plugins.intellij.net/plugin.dtd">
<idea-plugin>
    <name>REST Client plugin</name>
    <description>RESTClient is a Java application to test RESTful webservices.</description>
    <version>0.1</version>
    <vendor url="http://code.google.com/p/rest-client" email="libing.chen@gmail.com">Subhash Chandran, Jacky Chan
    </vendor>
    <idea-version since-build="8000"/>
    <depends>org.intellij.groovy</depends>
    <description><![CDATA[
    <html>
        RESTClient is a Java Swing application to test RESTful webservices. It can be used to test variety of HTTP communications.
    </html>
    ]]></description>
    <project-components>
        <component>
            <implementation-class>org.wiztools.restclient.idea.RestClientProjectComponent</implementation-class>
        </component>
    </project-components>
    <actions>
        <group id="RESTClient.MenuToolbar" description="REST Client Menu ToolBar">
            <separator/>
            <action id="AboutPluginAction" class="org.wiztools.restclient.idea.AboutPluginAction" text="about "
                    icon="/actions/help.png"/>
        </group>

    </actions>
</idea-plugin>
